<odoo>
  <data>
  
    <!-- Views -->
    <record model="ir.ui.view" id="microservice_task_tree">
        <field name="name">microservice.task.tree</field>
        <field name="model">microservice.task</field>
        <field name="arch" type="xml">
            <tree string="Microservice task">
                <field name="group"/>
                <field name="code" required="1"/>
                <field name="name" required="1"/>
                <field name="model"/>
            </tree>
        </field>
     </record>
        
     <record model="ir.ui.view" id="microservice_task_form">
        <field name="name">microservice.task.form</field>
        <field name="model">microservice.task</field>
        <field name="arch" type="xml">
            <form string="Microservice task">
                <sheet>
                    <group>
                        <field name="group"/>
                        <field name="code" required="1"/>
                        <field name="name" required="1"/>
                        <field name="model"/>
                    </group>
                    <notebook name="notebook">
                        <page string="Before request" >
                            <group>
                                <field name="run_before"/>
                            </group>
                        </page>
                        <page string="Request" >
                            <group>
                                <field name="request"/>
                            </group>
                        </page>
                        <page string="After response" >
                            <group>
                                <field name="run_after"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

            
    <!-- Action -->
    <record model="ir.actions.act_window" id="microservice_task_action">
        <field name="name">Microservice task</field>
        <field name="res_model">microservice.task</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create a new Microservice task
            </p>
        </field>
    </record>
          
    <!-- Menu Item -->
    <menuitem name="Task" 
    	id="menu_microservice_task"
    	parent="menu_microservice"
    	action="microservice_task_action" 
    	sequence="300" groups="microservice_manager"/>
  
  </data>
</odoo>