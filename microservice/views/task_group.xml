<odoo>
  <data>
  
    <!-- Views -->
    <record model="ir.ui.view" id="microservice_task_group_tree">
        <field name="name">microservice.task.group.tree</field>
        <field name="model">microservice.task.group</field>
        <field name="arch" type="xml">
            <tree string="Microservice task group" editable="top">
                <field name="code"/>
                <field name="name" />
            </tree>
        </field>
     </record>
        
     <record model="ir.ui.view" id="microservice_task_group_form">
        <field name="name">microservice.task.group.form</field>
        <field name="model">microservice.task.group</field>
        <field name="arch" type="xml">
            <form string="Microservice task group">
                <sheet>
                    <group>
                        <field name="code"/>
		                <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

            
    <!-- Action -->
    <record model="ir.actions.act_window" id="microservice_task_group_action">
        <field name="name">Microservice task group</field>
        <field name="res_model">microservice.task.group</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create a new Microservice task group
            </p>
        </field>
    </record>
          
    <!-- Menu Item -->
    <menuitem name="Task group" 
    	id="menu_microservice_task_group"
    	parent="menu_microservice"
    	action="microservice_task_group_action" 
    	sequence="200" groups="microservice_manager"/>
  
  </data>
</odoo>